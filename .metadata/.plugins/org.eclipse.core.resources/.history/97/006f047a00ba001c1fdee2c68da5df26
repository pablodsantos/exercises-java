package application;

import java.util.Scanner;

import entitities.Aluguel;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Quantos quartos deseja alugar: ");
		int quantityRoom = sc.nextInt();
		
		Aluguel[] vectAluguel = new Aluguel[quantityRoom];
			
		for(int i = 0; i < vectAluguel.length; i++) {
			System.out.printf("Rent #" + (i + 1));
			sc.nextLine();
			System.out.print("Name: ");
			sc.nextLine();
			String name = sc.nextLine();
			sc.nextLine();
			System.out.print("Email: ");
			String email = sc.nextLine();
			System.out.print("Room: ");
			int room = sc.nextInt();
			
			vectAluguel[i] = new Aluguel(name, email, room);
		}
		
		imprimeVetor(vectAluguel);
		
		sc.close();
	}
	
	public static void imprimeVetor(Aluguel[] vectAluguel) {
		for(int i = 0; i < vectAluguel.length; i++) {
			System.out.printf("Name: " + vectAluguel[i].getName());
			System.out.printf("Email: " + vectAluguel[i].getEmail());
			System.out.println("Room: " + vectAluguel[i].getRoom());
		}
	}
}
